const toLowerReplaceSpaceWithDash = (str) => {
	return str.replace(/\s+/g, '-').toLowerCase();
};

const toLowerRemoveSpace = (str) => {
	return str.replace(/\s+/g, '').toLowerCase();
};

function capitalizeFirstLetter(string) {
	return string.charAt(0).toUpperCase() + string.slice(1);
}

module.exports = { toLowerRemoveSpace, toLowerReplaceSpaceWithDash, capitalizeFirstLetter };